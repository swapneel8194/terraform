resource "aws_key_pair" "cloud" {         (Key-pair)
  key_name   = "cloudindia"
  public_key = "ssh-rsa  root@ip-172-31-12-93.us-east-2.compute.internal"
}

resource "aws_security_group" "cloudsg" {   (security Group)
  name        = "cloudsg"
  description = "Allow TLS inbound traffic"
  vpc_id      = aws_default_vpc.default.id

  ingress {
    description      = "TLS from VPC"
    from_port        = 22
    to_port          = 22
    protocol         = "tcp"
    cidr_blocks      = ["0.0.0.0/0"]
  }

  egress {
    from_port        = 0
    to_port          = 0
    protocol         = "-1"
    cidr_blocks      = ["0.0.0.0/0"]
  }

tags = {
    Name = "cloudsg"
  }
}

resource "aws_eip" "cloudeip" {      (Elastic IP)
  instance = aws_instance.cloud.id
  domain   = "vpc"
}

resource "aws_default_vpc" "default" {
  tags = {
    Name = "Default VPC"
  }
}
